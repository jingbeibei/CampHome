<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="16dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ctitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="标题"
            android:visibility="gone"
            android:textColor="#a4a4a3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="我的咨询："
            android:textSize="@dimen/textsize_25sp"
            android:textColor="#a4a4a3" />

        <TextView
            android:id="@+id/ccontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/textsize_25sp"
            android:text="生病了，好辛苦dsfdsfdsfdsfdsfsdfsdfdsfdsfdsfsdgfdgfdgfdgfdgfdgfdgfdgfdgdfgfdgfdgfdg"
            android:textColor="#3d3d3d" />

        <TextView
            android:id="@+id/cEntryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="2016-4-46"

            android:textColor="#a4a4a3"
            android:textSize="@dimen/sn_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="回复："
            android:textSize="@dimen/textsize_25sp"
            android:textColor="#a4a4a3" />

        <TextView
            android:id="@+id/canswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/textsize_25sp"
            android:text="生病了，好辛苦dsfdsfdsfdsfdsfsdfsdfdsfdsfdsfsdgfdgfdgfdgfdgfdgfdgfdgfdgdfgfdgfdgfdg"
            android:textColor="#3d3d3d" />

        <TextView
            android:id="@+id/cAnswerTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="2016-4-46"
            android:textColor="#a4a4a3"
            android:textSize="@dimen/sn_16sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>