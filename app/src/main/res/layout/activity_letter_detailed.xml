<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nuc.camphome.mailbox.LetterDetailedActivity">

    <include layout="@layout/toolbar_mybar"></include>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/letter_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="标题"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/letter_entrytime_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2016-04-01"
                android:textSize="@dimen/sn_20sp" />

            <TextView
                android:id="@+id/letter_contents_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容"
                android:textSize="@dimen/textsize_25sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="首长回复："
                android:textSize="30dp" />


            <TextView
                android:id="@+id/letter_answer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复内容"
                android:textSize="@dimen/textsize_25sp" />

            <TextView
                android:id="@+id/letter_answertime_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2016-04-01"
                android:textSize="@dimen/sn_20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
